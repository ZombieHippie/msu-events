    .page-title
      h1=org.name
  .row
    .col-sm-8
      h2 Calendars
      table
        thead
          tr
            td Name
            td id
            td
        tbody
          for calendar in org.calendars
    .col-sm-4
      h2 Actions
      ul
        li
          a(href="?refresh") Refresh Events