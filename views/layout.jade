head
  if title
    title=title
  link(href="/vendors/bootstrap-3.1.1/bootstrap.min.css", rel="stylesheet")
  meta(http-equiv="Content-Type" content="text/html;charset=utf-8")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  style.
    .container { max-width: 800px; }
    .mono { font-family: "Courier New" }
    @media(max-width: 600px){
      .m-p { background-color: #FFF; box-shadow: 0 2px 1px rgba(0, 0, 0, 0.1), 0 0 1px rgba(0, 0, 0, 0.1); border-radius: 2px; margin-top:10px; }
      body { background: #dbdbdb }
      .w { background: white }
    }
    .m-t-b {max-width:40em; display:inline-block;} /*m toolbar*/
    .no-b { border: none !important; background: transparent}
  block head
body
  include header-group
  .container
    block content
  footer
    include footer-group
    script(src="//localhost:9999/devreload.js")
    include analytics-group
    script(src="/coffee/debug.js")
    block footer
